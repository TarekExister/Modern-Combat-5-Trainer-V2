<UserControl x:Class="ModernCombat5Trainer.UserControls.ucPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernCombat5Trainer.UserControls"
             mc:Ignorable="d" 
                     d:DesignHeight="480" d:DesignWidth="630">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Custom Button-->
        <!--<Grid  x:Name="CBtn" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                </Border.Effect>
            </Border>
        </Grid>-->

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Grid Margin="0 50 0 0"  x:Name="CBtn" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Weapons Patch"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn" Content="Inventory Patch" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


            <Grid Margin="40 50 40 0"  x:Name="CBtn1" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS1"  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Radar"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl1" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn1" Content="Radar" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


            <Grid Margin="0 50 0 0" x:Name="CBtn2"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS2"  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Infinite Ammo"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl2" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn2" Content="Unlimited Ammo" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Grid Margin="0 0 0 0" x:Name="CBtn3"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS3" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Infinite VPower"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl3" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn3" Content="Unlimited V.Power" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


            <Grid Margin="40 0 40 0"  x:Name="CBtn4" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS4" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Auto Shoot"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl4" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn4" Content="Auto Shoot" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


            <Grid Margin="0 0 0 0"  x:Name="CBtn5" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS5" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Accuracy"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl5" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn5" Content="Accuracy" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Grid Margin="0 0 0 40" x:Name="CBtn6"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS6" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Infinite Frag"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl6" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn6" Content="Unlimited Frag" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


            <Grid Margin="40 0 40 40" x:Name="CBtn7"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS7" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Aim Lock"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl7" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn7" Content="Aim Lock" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


            <Grid Margin="0 0 0 40" x:Name="CBtn8"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS8" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="35 15 0 0" Content="Rapid Fire"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl8" Padding="35 35 0 0" Content="state: disabled"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn8" Content="Rapid Fire" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>
