<UserControl x:Class="ModernCombat5Trainer.UserControls.ucDlls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernCombat5Trainer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="630">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid Margin="0 20 0 0"  Width="470" Height="50"  Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Border  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="0 15 15 0" BorderThickness="3" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="0 0 0 0" Content="Process Name : WindowsEntryPoint.Windows_W10.exe"  Foreground="Azure" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            </Grid>


            <Grid x:Name="CBtn1" Margin="0 20 0 0"  Width="470" Height="50" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS3"  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Border x:Name="brdS2"  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="0 15 15 0" BorderThickness="3" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label x:Name="lblPath" Padding="0 0 0 0" Content="Dll Path"  Foreground="Azure" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                <ToggleButton x:Name="btnPath" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btnPath_Click"/>
            </Grid>










            <Grid Margin="0 20 0 0"  x:Name="CBtn" Width="150" Height="50" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
                <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
                <Border x:Name="brdS" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Border x:Name="brdS1" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="0 15 15 0" BorderThickness="3" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                    </Border.Effect>
                </Border>
                <Label Padding="0 0 0 0" Content="Inject"  Foreground="Azure" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                <ToggleButton x:Name="btn" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
