            </Border>
            <Label Padding="35 15 0 0" Content="Yokai"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl8" Padding="35 35 0 0" Content="value: 999"  Foreground="Azure" FontSize="13"></Label>
            <ToggleButton x:Name="btn8" Content="Yokai" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
    </StackPanel>

</Grid>
</UserControl>
