<UserControl x:Class="ModernCombat5Trainer.UserControls.ucCores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernCombat5Trainer.UserControls"
             mc:Ignorable="d" 
                             d:DesignHeight="480" d:DesignWidth="630">

<Grid>

    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!--Custom Button-->
    <!--<Grid  x:Name="CBtn" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
        <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
        <Border x:Name="brdS" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
            </Border.Effect>
        </Border>
    </Grid>-->

    <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <Grid Margin="0 50 0 0"  x:Name="CBtn" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                </Border.Effect>
            </Border>
            <Label Padding="35 15 0 0" Content="Armor Piercer"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
            <Label x:Name="lbl" Padding="35 35 0 0" Content="value: 999"  Foreground="Azure" FontSize="13"></Label>
            <ToggleButton x:Name="btn" Content="Armor Piercer" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>


        <Grid Margin="40 50 40 0"  x:Name="CBtn1" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS1"  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                </Border.Effect>
            </Border>
            <Label Padding="35 15 0 0" Content="Evil Eye"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl1" Padding="35 35 0 0" Content="value: 999"  Foreground="Azure" FontSize="13"></Label>
            <ToggleButton x:Name="btn1" Content="Evil Eye" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>


        <Grid Margin="0 50 0 0" x:Name="CBtn2"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS2"  Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                </Border.Effect>
            </Border>
            <Label Padding="35 15 0 0" Content="High Powered"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl2" Padding="35 35 0 0" Content="value: 999"  Foreground="Azure" FontSize="13"></Label>
                <ToggleButton x:Name="btn2" Content="High Powered" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
    </StackPanel>

    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <Grid Margin="0 0 0 0" x:Name="CBtn3"  Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS3" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="35" ShadowDepth="0" Opacity="1" Color="Azure"/>
                </Border.Effect>
            </Border>
            <Label Padding="35 15 0 0" Content="Impetum"  Foreground="Azure" FontSize="15" FontWeight="Bold"></Label>
                <Label x:Name="lbl3" Padding="35 35 0 0" Content="value: 999"  Foreground="Azure" FontSize="13"></Label>
            <ToggleButton x:Name="btn3" Content="Impetum" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>


        <Grid Margin="40 0 40 0"  x:Name="CBtn4" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS4" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
