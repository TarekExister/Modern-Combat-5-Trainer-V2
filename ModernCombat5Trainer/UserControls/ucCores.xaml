            <ToggleButton x:Name="btn4" Content="Murder Blitz" Opacity="0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>


        <Grid Margin="0 0 0 0"  x:Name="CBtn5" Width="150" Height="80" MouseLeave="CBtn_MouseLeave" MouseEnter="CBtn_MouseEnter" Background="Transparent">
            <Border BorderBrush="#b5b5b5" CornerRadius="15 15 15 15" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ></Border>
            <Border x:Name="brdS5" Width="20" Background="Azure" BorderBrush="Azure" CornerRadius="15 0 0 15" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Border.Effect>
